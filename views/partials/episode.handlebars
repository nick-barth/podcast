<div class="episode">
	<!-- <a href="/episode/{{ number }}/{{ url }}" class="episode__container"> -->
	<div class="episode__img-container">
		<img class="episode__img" src="/episodes/{{episode.img}}.jpg">
		<div class="episode__number">
			#{{episode.number}}
		</div>
	</div>
    <div class="episode__content-container">
		<div class="episode__guest">
			<span class="episode__guest-text"> {{ episode.guest }} </span>
		</div>
		<div class="episode__quote">
			"{{ episode.quote }}"
		</div>
		<div class="episode__description">
			{{ episode.description }}
		</div>
        <div class="player__src">
			<iframe width="100%" height="166" scrolling="no" frameborder="no" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/{{episode.soundcloud}}&amp;color=003333&amp;auto_play=false&amp;hide_related=false&amp;show_comments=true&amp;show_user=true&amp;show_reposts=false"></iframe>
		</div>
	</div>
</div>
